#!groovy
properties properties: [buildDiscarder(logRotator(numToKeepStr: '10'))]

pipeline {

    agent any

    environment {
        APPLICATION = "email"
        SERVER_IP = "192.168.104.167"
        SERVER_CREDENTIALS = "s-pep-java-in-test_192.168.104.167"
    }

    stages {
        stage("package") {
            checkout scm
            sh """
                mvn package
                more README.md
            """
        }
    }

    post {
        success {
            sh 'sed -i "s/#APPLICATION#/${APPLICATION}/g" email-html.template'
            sh 'sed -i "s/#JOB_NAME#/${JOB_NAME}/g" email-html.template'
            sh 'sed -i "s/#BUILD_NUMBER#/${BUILD_NUMBER}/g" email-html.template'
            emailext(
                    subject: '[构建成功]: ${env.JOB_NAME} [${env.BUILD_NUMBER}]',
                    body: '${FILE, path="email-html.template"}',
                    to: 'xtazxz@qq.com',
                    from: 'PEP Jenkins <devops@pep.com.cn>'
            )
        }
        failure {
            sh 'sed -i "s/#APPLICATION#/${APPLICATION}/g" email-html.template'
            sh 'sed -i "s/#JOB_NAME#/${JOB_NAME}/g" email-html.template'
            sh 'sed -i "s/#BUILD_NUMBER#/${BUILD_NUMBER}/g" email-html.template'
            emailext(
                    subject: '[构建成功]: ${env.JOB_NAME} [${env.BUILD_NUMBER}]',
                    body: '${FILE, path="email-html.template"}',
                    to: 'xtazxz@qq.com',
                    from: 'PEP Jenkins <devops@pep.com.cn>'
            )
        }
    }

}
