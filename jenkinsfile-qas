#!groovy
properties properties: [buildDiscarder(logRotator(numToKeepStr: '10'))]

pipeline {

    agent any

    environment {
        APPLICATION = "email"
        SERVER_IP = "192.168.104.167"
        SERVER_CREDENTIALS = "s-pep-java-in-test_192.168.104.167"
        NOTIFICATION_EMAIL_TEMPLATE = "jenkins-email.template"
    }

    stages {
        stage("Package") {
            steps {
                checkout scm
                sh """
                    mvn package
                    more README.md
                """
            }
        }
        stage("Deploy") {
            steps {
                sh """
                    echo deploy success
                """
            }
        }
    }

    post {
        always {
            sh """
                sed -i "s/#APPLICATION#/${APPLICATION}/g" ${NOTIFICATION_EMAIL_TEMPLATE}
                sed -i "s/#JOB_NAME#/${JOB_NAME}/g" ${NOTIFICATION_EMAIL_TEMPLATE}
                sed -i "s/#BUILD_NUMBER#/${BUILD_NUMBER}/g" ${NOTIFICATION_EMAIL_TEMPLATE}
                sed -i "s/#CAUSE#/${currentBuild.result}/g" ${NOTIFICATION_EMAIL_TEMPLATE}
                sed -i "s#BUILD_URL#${BUILD_URL}console#g" ${NOTIFICATION_EMAIL_TEMPLATE}
            """
            emailext(
                    subject: '[构建${BUILD_STATUS}]: ${JOB_NAME} [${BUILD_NUMBER}]',
                    body: '${FILE, path="jenkins-email.template"}',
                    to: 'xtazxz@qq.com',
                    from: 'PEP Jenkins <devops@pep.com.cn>'
            )
        }
    }

}
